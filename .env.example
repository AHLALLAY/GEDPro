# ========== Application ==========
APP_NAME=GEDPRO
APP_URL=http://localhost:3000
PORT=3000
NODE_ENV=development

# ========== CORS ==========
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ========== MongoDB ==========
# Option 1: Complete URI (recommended)
MONGODB_URI=mongodb://localhost:27017/gedpro

# Option 2: Separate variables (alternative)
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_USER=your_user_name
# MONGODB_PASSWORD=your_password
# MONGODB_DATABASE=your_database_name

# MongoDB Atlas (production)
# MONGODB_URI=mongodb+srv://<your_user_name>:<your_password>@cluster.mongodb.net/<your_database_name>

# ========== PostgreSQL ==========
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=gedpro

# ========== JWT ==========
# Generate a secure secret with:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_generate_with_command_above
JWT_EXPIRATION=86400s
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_generate_with_command_above
JWT_REFRESH_EXPIRATION=7d

# ========== MinIO (File storage) ==========
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=gedpro-documents
MINIO_REGION=us-east-1

# ========== File Upload Limits ==========
MAX_FILE_SIZE=10485760
# 10MB in bytes (10485760 = 10 * 1024 * 1024)

# ========== Google Calendar API ==========
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_CALENDAR_REFRESH_TOKEN=your_google_calendar_refresh_token

# ========== Admin Credential ==========
ADMIN_EMAIL=your_admin_email
ADMIN_PASSWORD=your_admin_password